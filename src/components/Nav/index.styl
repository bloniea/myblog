nav {
  height 3.75rem
  .nav {
    width 100%
    height 3.75rem
    background #fff
    background rgba(255, 255, 255, 0.8)
    position fixed
    border-bottom 0.0625rem solid #ccc
    z-index 99
    .title {
      position absolute
      top 0
      left 2.5rem
      height 100%
      line-height 3.75rem
      font-size 1.25rem
      img {
        height 100%
      }
    }
    .option {
      position absolute
      line-height 3.75rem
      right 2.5rem
      top 0
      .iconcaidan {
        margin-right 1.25rem
        font-size 1.25rem
      }
      i {
        cursor pointer
        font-size 1rem
        &:hover {
          color #b854d4
        }
      }
      .search-box {
        .search-input {
          border 0.0625rem solid #b854d4
          border-radius 0.625rem
          padding 0.125rem 0.625rem
          &:focus {
            outline none
          }
        }
        .cancel {
          font-size 0.75rem
          margin-left 0.5rem
          cursor pointer
          &:hover {
            color #b854d4
          }
        }
      }
    }
    // 页面大于768
    @media screen and (min-width 769px) {
      .option .iconcaidan {
        display none
      }
      .nav-names-app {
        display none
      }
      .nav-names {
        ul {
          list-style none
          display flex
          justify-content center
          line-height 3.75rem
          font-size 1rem
          box-sizing border-box
          margin 0
          user-select none
          -webkit-user-select none
          li {
            margin 0 0.625rem
            position relative
            cursor pointer
            transition all 0.3s
            color #3d3d3d
            font-weight bold
            i {
              font-size 1rem
              margin-right 0.3125rem
            }
            &:after {
              transition all 0.2s
              content ''
              position absolute
              height 0.3125rem
              background #b854d4
              bottom 0
              width 0
              left 0
            }
            &:hover {
              &:after {
                transition all 0.2s
                width 100%
              }
              color #b854d4
            }
          }
        }
      }
    }
    // 页面小于768
    @media screen and (max-width 768px) {
      position relative
      .menu {
        position absolute
        top 0
        right 1.25rem
      }
      .nav-names {
        display none
      }
      .nav-names-app {
        width 8.75rem
        position fixed
        right 0
        top 3.75rem
        bottom 0
        background rgba(0, 0, 0, 0.5)
        z-index 99
        ul {
          list-style none
          margin 0
          padding 0
          li {
            margin 0 auto
            padding 0.625rem 0
            color #fff
            cursor pointer
            i {
              margin-right 0.625rem
            }
            &:hover {
              color #b854d4
            }
          }
        }
      }
    }
  }
}
// 页面大于或等于768
@media screen and (min-width 769px) {
  .nav {
    position fixed
    top 0
    left 0
    right 0
    z-index 99
  }
}