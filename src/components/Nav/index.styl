nav {
  height 3.75rem
  .nav {
    width 100%
    height 3.75rem
    background #fff
    background rgba(255, 255, 255, 0.8)
    position fixed
    border-bottom 0.0625rem solid #ccc
    z-index 99
    .title {
      position absolute
      top 0
      left 1rem
      height 100%
      line-height 3.75rem
      font-size 1.25rem
      width 100%
      .logo {
        height 100%
        width 20%
        max-width 170px
        position relative
        cursor $my-cursor-pointer
        img {
          width 100%
          position absolute
          top 50%
          transform translateY(-50%)
        }
      }
    }
    .option {
      position absolute
      line-height 3.75rem
      right 2.5rem
      top 0
      display flex
      height 100%
      .app-nav {
        margin-left 10px
      }
      .search {
        :deep(input) {
          border-radius 20px
          width 90px
          transition width 0.2s
          &:focus {
            border-color $baseColor
            width 200px
          }
        }
      }
      .user {
        display flex
        align-items center
        padding-left 10px
        .el-dropdown {
          cursor $my-cursor-pointer
          @media screen and (max-width 768px) {
            .el-avatar {
              width 40px
              height 40px
            }
          }
        }
      }
      // .iconcaidan {
      // margin-right 1.25rem
      // font-size 1.25rem
      // }
      i {
        cursor $my-cursor-pointer
        font-size 1rem
        &:hover {
          color #b854d4
        }
      }
      :deep(.el-dialog__body) {
        padding 0 20px
      }
      .login {
        .login-btns {
          .el-button {
            width 100%
            margin-bottom 10px
            box-sizing border-box
            padding 0
          }
          .gitee {
            .el-button {
              background #C71D23
              color #fff
              &:hover {
                background #dc4f54
              }
            }
          }
          .github {
            .el-button {
              &:hover {
                color #606266
                border-color #b6b0b0
                background #fff
              }
            }
          }
        }
        .login-footer {
          display flex
          justify-content flex-end
        }
      }
    }
  }
}
// 大于768
@media screen and (min-width 769px) {
  .nav {
    .login-app {
      display none
      z-index 0
    }
    .option .iconcaidan {
      display none
    }
    .nav-names-app {
      display none
    }
    .nav-names {
      ul {
        list-style none
        display flex
        justify-content center
        line-height 3.75rem
        font-size 1rem
        box-sizing border-box
        margin 0
        user-select none
        -webkit-user-select none
        li {
          margin 0 0.625rem
          position relative
          cursor $my-cursor-pointer
          transition all 0.3s
          color #3d3d3d
          font-weight bold
          i {
            font-size 1rem
            margin-right 0.3125rem
          }
          &:after {
            transition all 0.2s
            content ''
            position absolute
            height 0.3125rem
            background #b854d4
            bottom 0
            width 0
            left 0
          }
          &:hover {
            &:after {
              transition all 0.2s
              width 100%
            }
            color #b854d4
          }
        }
      }
    }
  }
}
// 小于768
@media screen and (max-width 768px) {
  .nav {
    .login-pc {
      display none
      z-index 0
    }
    position relative
    .menu {
      position absolute
      top 0
      right 1rem
    }
    .nav-names {
      display none
    }
    .nav-names-app {
      width 8.75rem
      position fixed
      right 0
      top 3.75rem
      bottom 0
      background rgba(255, 255, 255, 0.7)
      z-index 99
      ul {
        list-style none
        margin 0
        padding 0
        li {
          margin 0 auto
          padding 0.625rem
          text-align center
          color #fff
          cursor $my-cursor-pointer
          color $fontColor
          i {
            margin-right 0.625rem
          }
          &:hover {
            color #b854d4
          }
        }
      }
    }
  }
}