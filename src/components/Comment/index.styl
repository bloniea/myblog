@import '../../Styles/variable.styl'
.comments {
  border-top 2px solid $baseColor
  margin 20px
  .user-avatar {
    margin-top 10px
  }
  .title {
    display flex
    justify-content space-between
    color #fff
  }
  .el-avatar {
    cursor pointer
  }
  .comments-box {
    .tip_login {
      display flex
      justify-content center
    }
    .comment_form {
      display flex
      justify-content space-between
    }
    .input {
      width 90%
      margin-top 7px
      margin-left 7px
      position relative
      .to-user {
        position absolute
        top 10px
        left 10px
        color $fontColor
        background $baseColor
        padding 0 5px
        margin-bottom 20px
        .close {
          font-size 13px
          &:hover {
            color #fff
            cursor pointer
          }
        }
      }
      .comments-input {
        textarea {
          width 100%
          height 140px
          border-radius 10px
          background rgba(255, 255, 255, 0.7)
          padding 10px
          resize none
          border-color transparent
          box-sizing border-box
          &:focus-visible {
            outline none
            border-color $baseColor
          }
          &::-ms-input-placeholder {
            color $fontColor
          }
          &::-webkit-input-placeholder {
            color $fontColor
          }
        }
        .is-reply {
          padding-top 39px
        }
      }
      .pre {
        background rgba(255, 255, 255, 0.7)
        width 100%
        border-radius 10px
        padding 15px
        position relative
        box-sizing border-box
        height 140px
      }
      .submit {
        float right
        margin-top 10px
      }
    }
  }
  .list {
    display flex
    justify-content space-between
    margin 10px 0
    .comment-content {
      background rgba(255, 255, 255, 0.7)
      width 90%
      border-radius 10px
      padding 10px
      margin-left 10px
      position relative
      box-sizing border-box
      max-height 400px
      word-wrap break-word
      overflow auto
      .username {
        padding-right 10px
        color $baseColor
        font-weight bold
      }
      .created {
        color $sign-fontColor
        font-size 14px
      }
      .reply {
        position absolute
        right 20px
        cursor pointer
        color $baseColor
      }
      .reply-content {
        padding-left 30px
        position relative
        color $secondary-fontColor
        &:before {
          content ''
          width 5px
          height 100%
          position absolute
          top 0
          left 20px
          background $baseColor
        }
        .name {
          color $baseColor
          font-weight bold
        }
        .content {
          overflow hidden
          text-overflow ellipsis
          display -webkit-box
          -webkit-line-clamp 2
          -webkit-box-orient vertical
        }
      }
      @media screen and (max-width 768px) {
        max-height 200px
      }
    }
  }
  .add {
    margin-top 20px
    text-align center
    span {
      background $baseColor
      padding 3px
      color $fontColor
      cursor pointer
      border-radius 5px
      user-select none
      -webkit-user-select none
      -moz-user-select none
      -ms-user-select none
      &:hover {
        color #ccc
      }
    }
  }
}