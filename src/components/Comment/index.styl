@import '../../Styles/variable.styl'
.comments {
  border-top 2px solid $baseColor
  margin 20px
  .user-avatar {
    margin-top 10px
  }
  .title {
    display flex
    justify-content space-between
    color #fff
  }
  .el-avatar {
    cursor pointer
  }
  .comments-box {
    display flex
    justify-content space-between
    .input {
      width 90%
      margin-top 7px
      margin-left 7px
      position relative
      .to-user {
        position absolute
        top 10px
        left 10px
        color $fontColor
        background $baseColor
        padding 0 5px
        margin-bottom 20px
      }
      .comments-input {
        textarea {
          width 100%
          height 140px
          border-radius 10px
          background rgba(255, 255, 255, 0.7)
          padding 10px
          resize none
          border-color transparent
          box-sizing border-box
          &:focus-visible {
            outline none
            border-color $baseColor
          }
          &::-ms-input-placeholder {
            color $fontColor
          }
          &::-webkit-input-placeholder {
            color $fontColor
          }
        }
        .is-reply {
          padding-top 39px
        }
      }
      .pre {
        background rgba(255, 255, 255, 0.7)
        width 100%
        border-radius 10px
        padding 15px
        position relative
        box-sizing border-box
        height 140px
      }
      .submit {
        float right
        margin-top 10px
      }
    }
  }
  .list {
    .username {
      color $baseColor
    }
    .comment-content {
      background rgba(255, 255, 255, 0.7)
      width 90%
      border-radius 10px
      padding 15px
      margin-left 10px
      position relative
      box-sizing border-box
      max-height 400px
      word-wrap break-word
      overflow auto
      .username {
        padding-right 10px
      }
      .reply {
        position absolute
        right 20px
        cursor pointer
        color $baseColor
      }
      @media screen and (max-width 768px) {
        max-height 200px
      }
    }
    .parent-comment {
      display flex
      justify-content space-between
      margin 10px 0
    }
    .child-comment {
      display flex
      justify-content space-between
      padding-left 70px
      margin 10px 0
      .to_user_info {
        margin-left 20px
        border-left 5px solid $baseColor
        padding-left 10px
      }
    }
  }
  .add {
    margin-top 20px
    text-align center
    span {
      background $baseColor
      padding 3px
      color $fontColor
      cursor pointer
      border-radius 5px
      user-select none
      -webkit-user-select none
      -moz-user-select none
      -ms-user-select none
      &:hover {
        color #ccc
      }
    }
  }
}