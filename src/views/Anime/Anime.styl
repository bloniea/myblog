.anime {
  .my-container {
    .tip {
      text-align center
      font-size 20px
      color $baseColor
      padding-top 10px
      font-weight bold
    }
    .container {
      display flex
      padding 20px
      flex-wrap wrap
      .list {
        width 32%
        margin 0 (4 / 6)%
        margin-bottom 40px
        cursor $my-cursor-pointer
        .cover {
          height 300px
          .el-image {
            width 100%
            height 100%
          }
        }
        .title {
          margin 10px
        }
      }
    }
    @media screen and (max-width 768px) {
      .container {
        padding 10px
        .list {
          .cover {
            height 260px
          }
        }
      }
    }
    @media screen and (max-width 500px) {
      .container {
        padding 10px
        .list {
          .cover {
            height 140px
          }
        }
      }
    }
  }
}