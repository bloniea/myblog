@import '../../Styles/variable.styl'
.wraper {
  width 100%
  // height 400px
  overflow hidden
  position relative
  height 0
  padding-bottom 55%
  .el-image {
    width 100%
    position absolute
    bottom 0
    left 0
    right 0
    top 0
  }
}
.article-header {
  color #4c2e4e
  position relative
  height 64px
  .el-image {
    width 100%
    height 100%
  }
  .head-bg {
    background rgba(255, 255, 255, 0.56)
    backdrop-filter blur(3px)
    position absolute
    top 0
    width 100%
    height 100%
  }
  .title-box {
    position absolute
    top 0
    width 100%
    height 100%
    padding 5px 20px
    box-sizing border-box
    .title {
      display flex
      justify-content space-between
      .title-name {
        font-weight bold
        font-size 20px
      }
    }
    .info {
      display flex
      justify-content space-between
      span {
        padding-right 10px
      }
      .category_name {
        cursor pointer
        &:hover {
          color #a73ec9
        }
      }
    }
  }
}
.article-content {
  padding 10px
}
@media screen and (max-width 500px) {
  .source {
    display none
  }
}
.star {
  text-align center
  i {
    font-size 30px
    cursor pointer
    color #fff
    &:hover {
      color $baseColor
    }
  }
  .stared {
    color #f25d16
  }
}