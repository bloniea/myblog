@import '../../Styles/variable.styl'
.article-content >>> {
  .hljs {
    color #4b4b4b
    background-color rgba(255, 255, 255, 0.35)
  }
  p {
    code {
      color #b854d4
      font-weight bold
    }
  }
}
.wraper {
  width 100%
  height 400px
  overflow hidden
  position relative
}
.article-header {
  color #4c2e4e
  position relative
  height 80px
  .el-image {
    width 100%
    height 100%
  }
  .head-bk {
    background rgba(255, 255, 255, 0.56)
    backdrop-filter blur(3px)
    position absolute
    top 0
    width 100%
    height 100%
  }
  .title-box {
    position absolute
    top 0
    width 100%
    height 100%
    padding 10px 20px
    box-sizing border-box
    .title {
      display flex
      justify-content space-between
      padding-bottom 10px
      .title-name {
        font-weight bold
        font-size 20px
      }
    }
    .info {
      display flex
      justify-content space-between
      span {
        padding-right 10px
      }
    }
  }
}
.article-content {
  padding 10px 0
}