.tools {
  .title {
    margin-left 15px
    padding-top 10px
    margin-right 15px
    border-bottom 2px solid #D196E1
    font-weight bold
  }
  .tool-box {
    display flex
    // justify-content space-between
    flex-wrap wrap
    padding 5px 15px 15px 15px
    .tool-list {
      width 32%
      height 50px
      background transparent
      margin: (4 / 6)%
      box-sizing border-box
      padding 4px
      display flex
      box-shadow 2px 2px 5px #ab63c8
      @media screen and (max-width 768px) {
        width 48%
        margin: (2 / 4)%
        margin-bottom 5px
      }
      @media screen and (max-width 400px) {
        width 98%
        margin 1%
        margin-bottom 5px
      }
      .image {
        height 100%
        width 20%
        cursor $my-cursor-pointer
        .el-image {
          width 100%
          height 100%
        }
      }
      .content {
        margin-left 10px
        .content-title {
          color #d535ff
          cursor $my-cursor-pointer
          &:hover {
            text-decoration underline
          }
        }
        .content-subtitle {
          font-size 12px
          color #767171
        }
      }
    }
  }
}