.ico {
  .upload {
    width 160px
    height 160px
    position relative
    margin 0 auto
    .file {
      width 100%
      height 100%
      border 2px dashed $baseColor
      box-sizing border-box
      input {
        width 100%
        height 100%
        opacity 0
      }
    }
    .el-icon {
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      size 20
    }
    .el-image {
      width 100%
      height 100%
      position absolute
      background #fff
    }
  }
  .input {
    display flex
    width 150px
    margin 10px auto
  }
  .tip {
    text-align center
    padding 5px
    color #ff0000
    font-size 14px
  }
  .result {
    .image {
      text-align center
    }
  }
}