.category-detail {
  width 100%
  padding 20px
  box-sizing border-box
  // background rgba(255, 255, 255, 0.5)
  -webkit-user-select none
  -moz-user-focus none
  -ms-user-select none
  user-select none
  .title > .cate-name {
    color #b854d4
    font-weight bold
    cursor pointer
    .iconclose {
      &:hover {
        color #D25D95
      }
    }
  }
  article {
    margin 20px 0
    display flex
    height 200px
    background rgba(255, 255, 255, 0.7)
    box-shadow 0 4px 12px #a8a8a8
    cursor pointer
    box-sizing border-box
    transition all 0.3s
    &:hover {
      transform translateY(-5px)
    }
    .article-img {
      width 30%
      overflow hidden
      // margin-right 1%
      img {
        width 100%
        min-height 100%
        object-fit cover
        transition all 0.3s
        // cursor pointer
        &:hover {
          transform scale(1.15)
        }
      }
    }
    .article-message {
      width 68%
      // border 1px solid red
      // margin-left 1%
      position relative
      padding 20px
      -webkit-user-select none
      -ms-user-select none
      -moz-user-select none
      user-select none
      box-sizing border-box
      .article-title {
        overflow hidden
        text-overflow ellipsis
        white-space nowrap
        &:hover {
          color #b854d4
          cursor pointer
        }
      }
      .article-content {
        overflow hidden
        text-overflow ellipsis
        display -webkit-box
        -webkit-line-clamp 2
        -webkit-box-orient vertical
      }
      .more {
        i {
          font-size 30px
        }
      }
      .article-info {
        position absolute
        bottom 10px
        right 0
        left 0
        display flex
        justify-content flex-end
        color #888
        div {
          margin 0 10px
        }
      }
    }
  }
  // 页面低于768px
  @media screen and (max-width 768px) {
    article {
      height auto
      // padding-bottom 87%
      display flex
      flex-flow column
      .article-img {
        width 100%
        height 0
        padding-bottom 45%
        overflow hidden
        img {
          width 100%
          min-height auto
          object-fit cover
        }
      }
      .article-message {
        width 100%
        padding-bottom 30%
        padding 0 20px
        .article-title {
          overflow hidden
          text-overflow ellipsis
          white-space nowrap
        }
        .article-content {
          overflow hidden
          text-overflow ellipsis
          display -webkit-box
          -webkit-line-clamp 2
          -webkit-box-orient vertical
        }
        .article-info {
          position relative
          margin-top 20px
        }
      }
    }
  }
}
