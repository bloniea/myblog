$baseColor = #b854d4
html {
  font-size 16px
}
@media screen and (max-width 768px) {
  html {
    font-size 14px
  }
}
@media screen and (max-width 400px) {
  html {
    font-size 12px
  }
}
html, body {
  width 100%
  height 100%
  padding 0
  margin 0
  color #4b4b4b
  font-family 'Comic Sans MS', cursive, sans-serif
  ::selection {
    background-color #b854d4
    color #fff
  }
  ::-webkit-selection {
    background-color #b854d4
    color #fff
  }
  ::-moz-selection {
    background-color #b854d4
    color #fff
  }
}
#app {
  z-index 1
  position relative
  width 100%
  height 100%
}
#bg {
  top 0
  bottom 0
  left 0
  right 0
  width 100%
  height 100%
  z-index 0
}
#nprogress .bar {
  background #b854d4 !important // 自定义颜色
}
/* 定义滚动条宽高及背景，宽高分别对应横竖滚动条的尺寸 */
::-webkit-scrollbar {
  width 6px
  height 6px
  // background-color #f5f5f5
}
/* 定义滑块，内阴影及圆角 */
::-webkit-scrollbar-thumb {
  /* width: 10px; */
  height 10px
  border-radius 10px
  background-image linear-gradient(#B854D4, #e66465)
}